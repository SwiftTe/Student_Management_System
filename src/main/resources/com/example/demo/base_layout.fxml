<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<!-- Assign fx:controller to the new DashboardController -->
<BorderPane xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.demo.DashboardController"
            fx:id="rootPane"
            prefWidth="1200" prefHeight="800">

    <!-- Left Sidebar -->
    <left>
        <!-- Add fx:id to the VBox so it can be referenced in the controller -->
        <VBox fx:id="sidebar" spacing="10" style="-fx-background-color: #2C3E50;"
              prefWidth="250" padding="15">
            <!-- Initial content here will be cleared and re-populated by the controller -->
            <Label text="SMS System" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
            <!-- Example buttons, these will be replaced dynamically -->
            <Button text="Default Button 1" maxWidth="Infinity" />
            <Button text="Default Button 2" maxWidth="Infinity" />
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <!-- Add fx:id to the VBox for dynamic content injection -->
        <VBox fx:id="mainContent" spacing="15" padding="20">
            <!-- Dynamic content will be loaded here by the controller -->
            <Label text="Welcome to the Student Management System" style="-fx-font-size: 22px;" />
            <Label text="Please select a module from the sidebar." />
        </VBox>
    </center>
</BorderPane>
